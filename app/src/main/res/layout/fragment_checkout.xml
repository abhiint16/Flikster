    android:layout_height="match_parent">



    <include layout="@layout/fragment_common_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_checkout_bottom_btn"/>

    <Button
