<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginBottom="@dimen/ten"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:background="@color/grey_txt_label" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:paddingBottom="@dimen/five"
                android:paddingLeft="@dimen/ten"
                android:paddingTop="@dimen/five"
                android:text="Time Left"
                android:textColor="@color/translucent"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/ten"
                android:text=":"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/timelefttxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.3"
                android:paddingBottom="@dimen/five"
                android:paddingRight="@dimen/ten"
                android:paddingTop="@dimen/five"
                android:text="22h 45m 52s(31 Oct 2017)"
                android:textColor="@color/dark_grey"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:paddingBottom="@dimen/five"
                android:paddingLeft="@dimen/ten"
                android:paddingTop="@dimen/five"
                android:text="Starting Bid"
                android:textColor="@color/translucent"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/ten"
                android:text=":"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pricebidtxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.3"
                android:paddingBottom="@dimen/five"
                android:paddingRight="@dimen/ten"
                android:paddingTop="@dimen/five"
                android:text="Rs 12,800/-"
                android:textColor="@color/translucent"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:paddingBottom="@dimen/five"
            android:paddingLeft="@dimen/ten"
            android:paddingRight="@dimen/ten"
            android:paddingTop="@dimen/five"
            android:text="(0 Bids)"
            android:textColor="@color/dark_grey"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_createac_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="@dimen/five"
            android:background="@drawable/gray_box"
            android:gravity="center"
            android:hint="@string/enter_bid"
            android:inputType="number"
            android:padding="15dp" />

        <TextView
            android:id="@+id/enterbidtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/five"
            android:paddingBottom="@dimen/five"
            android:paddingLeft="@dimen/ten"
            android:paddingRight="@dimen/ten"
            android:paddingTop="@dimen/five"
            android:text="Enter Rs12,800 or more"
            android:textColor="@color/dark_grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ongoingbid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/five"
            android:paddingBottom="@dimen/five"
            android:paddingLeft="@dimen/ten"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/ten"
            android:drawablePadding="@dimen/ten"
            android:paddingTop="@dimen/five"
            android:drawableLeft="@drawable/refreshbutton"
            android:text="Ongoing Bid"
            android:textColor="@color/dark_grey"
            android:textSize="15sp" />

        <Button
            android:id="@+id/placebidbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/twenty"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="@dimen/twenty"
            android:background="#ff6666"
            android:text="@string/place_bid"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:background="@color/grey_txt_label" />
    </LinearLayout>

</LinearLayout>
