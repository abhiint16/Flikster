<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="5dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:id="@+id/fashion_hor_recycler_adapter_item_container">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:id="@+id/fragment_fashion_hor_recycler_item_imageview"
        android:background="@drawable/fashion_new_round_border"
        android:padding="0.5dp"
        android:scaleType="fitXY"
        android:clickable="false"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="false"
        android:id="@+id/fragment_fashion_hor_recycler_item_title"
        android:lines="1"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="false"
        android:id="@+id/fragment_fashion_hor_recycler_item_tag"
        android:textColor="@color/black"
        android:lines="1"/>

</LinearLayout>