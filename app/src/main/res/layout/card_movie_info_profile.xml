<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_movie_info_profile_coverpic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="#4e4e4e"
            android:scaleType="fitXY"></ImageView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></View>

    </LinearLayout>

    <ImageView
        android:id="@+id/card_movie_info_profile_profilepic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/no_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="55dp"
        android:layout_marginTop="80dp"
        android:layout_toLeftOf="@+id/card_movie_info_profile_profilepic"
        android:text="258 Followers"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@+id/card_movie_info_profile_profilepic"
        android:background="@drawable/white_round_border"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="FOLLOW"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/card_movie_info_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_movie_info_profile_profilepic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="3 Idiots"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/card_movie_info_profile_linear_belowtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_movie_info_profile_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/card_movie_info_profile_releasedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23rd Aug"
            android:textColor="#454545"
            android:paddingRight="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="#454545"
            android:paddingRight="5dp"/>

        <TextView
            android:id="@+id/card_movie_info_profile_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h 30m"
            android:textColor="#454545"
            android:paddingRight="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="#454545"
            android:paddingRight="5dp"/>

        <TextView
            android:id="@+id/card_movie_info_profile_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hindi"
            android:textColor="#454545"
            android:paddingRight="5dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_movie_info_profile_genre"
        android:layout_below="@+id/card_movie_info_profile_linear_belowtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="Romance | Comedy | Drama"
        android:textColor="#454545" />

    <LinearLayout
        android:id="@+id/card_movie_info_profile_rating_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/ll"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:src="@drawable/star_yellow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="9.0"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:paddingBottom="2dp"
                    android:text="/10"
                    android:textColor="@color/dark_grey" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="User's Rating"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:src="@drawable/star_yellow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/card_movie_info_profile_critic_rating"
                    android:text="3.5"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:paddingBottom="2dp"
                    android:text="/5"
                    android:textColor="@color/dark_grey" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Critic's Rating"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rating_now_showing_frag_recycler_item_rate_movie"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/black_round_border"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:clickable="false"
                android:src="@drawable/star_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center"
                android:text="Rate The Movie" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_movie_info_profile_rating_linear"
        android:layout_marginTop="10dp"
        android:id="@+id/card_movie_info_profile_storyline"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="In college, Farhan and Raju form a great bond with Rancho due to his refreshing outlook. Years later, a bet gives them a chance to look for their long-lost friend whose existence seems rather elusive." />
</RelativeLayout>
