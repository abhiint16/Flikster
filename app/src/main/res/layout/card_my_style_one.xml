<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mystyle_layout_one"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card_gallary3_img1"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/five"
            android:layout_marginRight="@dimen/five"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginBottom="@dimen/five"
            android:src="@color/style_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/five"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_gallary3_img2"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:layout_marginRight="@dimen/five"
                android:layout_weight="1"
                android:background="@color/style_background" />

            <ImageView
                android:id="@+id/card_gallary3_img3"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:layout_marginRight="@dimen/five"
                android:layout_marginTop="@dimen/five"
                android:layout_marginBottom="@dimen/five"
                android:layout_weight="1"
                android:background="@color/style_background" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>