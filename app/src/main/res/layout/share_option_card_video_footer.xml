<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="8dp">

    <ImageButton
        android:id="@+id/ib_whatsapp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/whatsapp" />

    <ImageButton
        android:id="@+id/ib_messenger"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/ib_like"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/ib_whatsapp"
        android:layout_toRightOf="@+id/ib_whatsapp"
        android:background="@drawable/messagericon" />

    <ImageButton
        android:id="@+id/ib_like"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/ib_messenger"
        android:background="@drawable/loveicon" />

    <ImageButton
        android:id="@+id/ib_bookmark"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bookmarkicon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ib_like"
        android:text="268 Likes"
        android:textColor="@color/white" />

</RelativeLayout>