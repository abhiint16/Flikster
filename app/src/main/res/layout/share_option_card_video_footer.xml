<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="8dp">

    <ImageButton
        android:id="@+id/card_footer_share"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/share" />

    <ImageButton
        android:id="@+id/ib_like"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/ib_messenger"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/card_footer_share"
        android:layout_toRightOf="@+id/card_footer_share"
        android:background="@drawable/loveicon"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/ib_messenger"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/ib_like"
        android:background="@drawable/messagericon"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/ib_bookmark"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:src="@drawable/bookmark_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ib_like"
        android:text="268 Likes"
        android:textColor="@color/white"
        android:visibility="gone" />

</RelativeLayout>