<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_description_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/auction_header_title_desc"
        android:textColor="@android:color/black"
        android:padding="@dimen/seven"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginRight="@dimen/ten"
        android:layout_marginTop="@dimen/seven"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bidprice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/startbid"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="12sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/seven"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:id="@+id/timelefttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/watch_small_icon"
                android:drawablePadding="@dimen/seven"
                android:text="@string/timeleft"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="12sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/datetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/ten"
        android:text="@string/datestr"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="12sp"

        android:layout_marginBottom="@dimen/ten"
        android:textStyle="normal" />
</LinearLayout>