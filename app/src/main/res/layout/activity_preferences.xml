<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/preference_head1"
        android:layout_weight="1"
        style="@style/headers"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/preference_head2"
        style="@style/preference_head2"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/nextbtn_textbg"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/industry_type"
        style="@style/headers"/>

    <RadioGroup
        android:id="@+id/industry_group"
        android:layout_width="match_parent"
        android:layout_weight="2.5"
        android:layout_height="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">
            <RadioButton
                android:id="@+id/ind_bollywood"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="@string/industry1"
                android:layout_height="wrap_content"
                style="@style/radio_group"/>

            <RadioButton
                android:id="@+id/ind_tollywood"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="@string/industry2"
                android:layout_height="wrap_content"
                android:checked="true"
                style="@style/radio_group"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">
            <RadioButton
                android:id="@+id/ind_tamil"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="@string/industry3"
                android:layout_height="wrap_content"
                style="@style/radio_group"/>
            <RadioButton
                android:id="@+id/ind_kannada"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="@string/industry4"
                android:layout_height="wrap_content"
                style="@style/radio_group"
                />
        </LinearLayout>

        <RadioButton
            android:id="@+id/ind_malayalam"
            android:layout_width="match_parent"
            android:text="@string/industry5"
            android:layout_height="wrap_content"
            style="@style/radio_group"/>
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/nextbtn_textbg">

    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/fashion_selection"
        android:layout_weight="1"
        style="@style/headers"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_menFashion"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/man"
            android:layout_marginRight="5dp"
            android:text="@string/fashion1"
            android:background="@drawable/rectange_shape"
            android:gravity="center"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/tv_womenFashion"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/woman"
            android:layout_height="wrap_content"
            android:text="@string/fashion2"
            android:background="@drawable/rectange_shape"
            android:gravity="center"
            android:padding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.6"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/goto_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/nexts"
            style="@style/next_btn"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:id="@+id/goto_signup"
            style="@style/next_btn"
            android:text="Sign Up"/>
    </LinearLayout>
</LinearLayout>
