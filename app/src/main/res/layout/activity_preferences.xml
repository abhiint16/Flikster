<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:gravity="center">

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/logotext"
        android:gravity="center_horizontal" />
-->
    <TextView
        style="@style/preferences_header_style"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.5"
        android:fontFamily="@font/alt_regular_webfont"
        android:text="@string/preference_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:gravity="center"
        android:fontFamily="@font/alt_regular_webfont"
        android:text="@string/preference_subheader" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        style="@style/preferences_header_style"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/alt_regular_webfont"
        android:text="@string/preference_industry_type" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp">

        <RadioButton
            android:id="@+id/ind_bollywood"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/preference_industry_bollywood"
            android:checked="true"
            android:buttonTint="#6ea8e4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alt_regular_webfont"
            android:layout_weight="0.3"/>
        <RadioButton
            android:id="@+id/ind_tollywood"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/preference_industry_tollywood"
            android:buttonTint="#6ea8e4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp">

        <RadioButton
            android:id="@+id/ind_tamil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/preference_industry_tamil"
            android:buttonTint="#6ea8e4"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alt_regular_webfont"
            android:layout_weight="0.3"/>

        <RadioButton
            android:id="@+id/ind_kannada"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/preference_industry_kannada"
            android:buttonTint="#6ea8e4"/>
    </LinearLayout>

    <RadioButton
        android:id="@+id/ind_malayalam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/preference_industry_malayalam"
        android:layout_marginLeft="10dp"
        android:buttonTint="#6ea8e4"/>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/five"
        android:background="@color/colorAccent">

    </View>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0.1dp"
            android:layout_weight="1"
            android:background="#7d7c7b"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/alt_regular_webfont"
            android:layout_marginLeft="60dp"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@color/transparent"
            android:src="@drawable/pref_box"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0.1dp"
            android:layout_weight="1"
            android:background="#7d7c7b"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="60dp"/>
    </LinearLayout>


    <TextView
        style="@style/preferences_header_style2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="@font/alt_regular_webfont"
        android:layout_weight="0.5"
        android:text="@string/preference_fashion_selection" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/tv_menFashion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="0.4"
            android:fontFamily="@font/alt_regular_webfont"
            android:background="@drawable/gray_rectange_border"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/preference_men_fashion"
            android:textSize="12sp"/>
            <!--android:drawableLeft="@drawable/dress_male"/>-->

        <TextView
            android:id="@+id/tv_womenFashion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.4"
            android:background="@drawable/gray_rectange_border"
            android:gravity="center"
            android:fontFamily="@font/alt_regular_webfont"
            android:padding="10dp"
            android:text="@string/preference_female_fashion"
            android:textSize="12sp"/>
            <!--android:drawableLeft="@drawable/dress_female"/>-->

    </LinearLayout>


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <Button
            android:id="@+id/preference_next_btn"
            style="@style/preferences_next_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/preferences_next"
            android:visibility="gone" />

        <Button
            android:id="@+id/goto_signup"
            style="@style/preferences_next_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Next"
            android:background="@drawable/corner_rounded_pink"
            android:textColor="#ededed"/>
    </LinearLayout>


<TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:fontFamily="@font/alt_regular_webfont"
    android:layout_weight="1"/>
</LinearLayout>
