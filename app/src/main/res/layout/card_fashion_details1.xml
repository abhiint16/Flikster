<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_solid_border"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <include layout="@layout/card_header" />

    <TextView
        android:id="@+id/card_fashion_details1_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/card_fashion_details1_img_container">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_fashion_details1_img"
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/no_image"
        android:scaleType="fitXY"/>
    </LinearLayout>
    <include layout="@layout/card_footer"/>

    <include layout="@layout/card_description_with_price"/>

</LinearLayout>