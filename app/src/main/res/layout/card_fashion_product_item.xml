<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/white_radius_box"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:orientation="vertical"
       >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/ten"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/fashion_proimg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="@dimen/ten"
                android:layout_marginTop="@dimen/fifteen"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/gray_rectange_border" />

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/ten">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"

                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginRight="@dimen/five"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/brannametxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:text="Brand Name"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/pricetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:text="Rs 2530/-"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/buybtn"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/fifteen"
                    android:background="@drawable/corner_rounded"
                    android:text="Buy"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
