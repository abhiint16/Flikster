<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:background="@drawable/white_solid_round_border"
    android:orientation="vertical"
    android:layout_margin="5dp">

        <ImageView
            android:id="@+id/card_music_recycler_item_img"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:scaleType="fitXY"
            android:background="@color/colorImageBackgroundGrey"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="title"
        android:padding="5dp"
        android:fontFamily="@font/alt_regular_webfont"
        android:textSize="10sp"
        android:gravity="center"
        android:id="@+id/card_music_recycler_item_title"
        android:textColor="@color/black"/>

</LinearLayout>