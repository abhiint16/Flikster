<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="160dp"
    android:background="@drawable/white_solid_round_border"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="5">
        <ImageView
            android:id="@+id/card_music_recycler_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@color/colorImageBackgroundGrey"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/playbtn"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="title"
        android:padding="5dp"
        android:fontFamily="@font/alt_regular_webfont"
        android:lines="1"
        android:textSize="10sp"
        android:gravity="center"
        android:id="@+id/card_music_recycler_item_title"
        android:textColor="@color/black"/>

</LinearLayout>