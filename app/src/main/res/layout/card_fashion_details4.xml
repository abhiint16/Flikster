<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_solid_border"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <include layout="@layout/card_header" />
    <TextView
        android:id="@+id/card_fashion_details4_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="14sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/colorImageBackgroundGrey"
        android:orientation="horizontal"
        android:id="@+id/card_fashion_deatails4_img_container"
        android:clickable="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="false">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1.2"
                android:background="@color/white"
                android:id="@+id/card_fashion_details4_img1"
                android:src="@drawable/no_image"
                android:clickable="false"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/card_fashion_details4_img2"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:background="@color/white"
                android:src="@drawable/no_image"
                android:clickable="false"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:clickable="false">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:id="@+id/card_fashion_details4_img3"
                android:src="@drawable/no_image"
                android:clickable="false"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1.2"
                android:background="@color/white"
                android:id="@+id/card_fashion_details4_img4"
                android:src="@drawable/no_image"
                android:clickable="false"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </LinearLayout>


    <include layout="@layout/card_footer" />

    <include layout="@layout/card_description_with_price" />

</LinearLayout>