<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_authentication_margin"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_verify_mobile_info"
        android:textStyle="bold"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/tv_verify_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="flikster@gmail.com"
        android:textStyle="bold"
        android:textSize="16sp"
        android:inputType="none"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/otp_no1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:maxLength="1"
            android:background="@drawable/gray_rectange_border"
            android:padding="10dp"
            android:layout_marginRight="7dp"/>

        <EditText
            android:id="@+id/otp_no2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:maxLength="1"
            android:background="@drawable/gray_rectange_border"
            android:padding="10dp"
            android:layout_marginRight="7dp"/>

        <EditText
            android:id="@+id/otp_no3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:maxLength="1"
            android:background="@drawable/gray_rectange_border"
            android:padding="10dp"
            android:layout_marginRight="7dp"/>

        <EditText
            android:id="@+id/otp_no4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:maxLength="1"
            android:background="@drawable/gray_rectange_border"
            android:layout_marginRight="7dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/tv_otp_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="00:45"
            android:gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_verify_mobile_code_receive"/>
        <TextView
            android:id="@+id/tv_send_new_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="none"
            android:text="@string/login_verify_mobile_resend_code"
            android:textColor="@color/colorCreateAccountSelected"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_email_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_verify_mobile_verify"
        style="@style/login_btn"
        android:layout_marginTop="30dp"/>

</LinearLayout>
