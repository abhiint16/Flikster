<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ten"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginRight="@dimen/ten"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/brannametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:fontFamily="@font/alt_regular_webfont"
            android:text="BUY ALL PRODUCTS(5) "
            android:textColor="@color/header_background"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="Rs 10000/-"
            android:textColor="@color/header_background"
            android:fontFamily="@font/alt_regular_webfont"
            android:textSize="17sp" />
    </LinearLayout>


    <Button
        android:id="@+id/buyBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/ten"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="@dimen/ten"
        android:background="@drawable/corner_rounded"
        android:backgroundTint="@color/horizontal_line"
        android:fontFamily="@font/alt_regular_webfont"
        android:gravity="center_horizontal|center"
        android:text="+Buy"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>