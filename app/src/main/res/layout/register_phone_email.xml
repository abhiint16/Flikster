<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:background="@color/transparent"
        android:clickable="true"
        android:src="@drawable/leftarrow"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        style="@style/headers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Register" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="50dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/simple_line"/>
    </LinearLayout>

    <EditText
        android:id="@+id/register_phone_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:layout_marginTop="@dimen/ten"
        android:background="@drawable/gray_rectange_border"
        android:hint="Enter Phone Number"
        android:inputType="textPassword"
        android:textCursorDrawable="@drawable/cursor_color"
        android:maxLines="1"
        android:cursorVisible="true"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By creating an account, you agree to our "
            android:textSize="11sp" />

        <TextView
            android:id="@+id/register_terms_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="@string/login_terms"
            android:textSize="11sp" />
    </LinearLayout>

    <Button
        android:id="@+id/register_send_otp_phone"
        style="@style/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="SEND OTP" />
</LinearLayout>