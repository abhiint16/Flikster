<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_margin="5dp"
    android:layout_marginRight="5dp"
    android:background="#efefef"
    android:elevation="10dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/card_fashion_product_singleimg_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/gray_rectange_border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/card_fashion_product_singleimg_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="6"
            android:background="@color/transparent"
            android:fontFamily="@font/alt_regular_webfont"
            android:gravity="center"
            android:text="BRAND NAME"
            android:textColor="@color/grey_txt_label"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_fashion_product_singleimg_brandname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:fontFamily="@font/alt_regular_webfont"
                android:gravity="center"
                android:text="BRAND NAME"
                android:textColor="@color/black"
                android:textSize="8sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/buybtn_hor_fashion_men"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/alt_regular_webfont"
                    android:layout_gravity="center"
                    android:background="@drawable/corner_rounded"
                    android:gravity="center"
                    android:text="Buy"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>