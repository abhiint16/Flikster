<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:fontFamily="@font/alt_regular_webfont"
        android:id="@+id/card_celebrity_feed_news_title"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_celebrity_feed_news_image"
        android:background="@color/white"
        android:src="@drawable/no_image" />
    <include layout="@layout/card_footer"></include>
    <include layout="@layout/card_description"></include>
    <include layout="@layout/card_comment_text"></include>
</LinearLayout>