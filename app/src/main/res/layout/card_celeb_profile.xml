<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/celeprofilelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_celebrity_feed_profile_coverpic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:background="@color/horizontal_line"
            android:scaleType="fitXY" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_celebrity_feed_profile_layout"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_radius_fill_pink_box">


        <ImageView
            android:id="@+id/profileimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/twenty"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/shoppingbag" />
    </LinearLayout>

    <TextView
        android:id="@+id/fashionname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:text="258 Followers"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/card_celebrity_feed_profile_layout"
        android:background="@drawable/white_round_border"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="FOLLOW"
        android:textColor="@color/white"
        android:textSize="12sp" />


</RelativeLayout>
