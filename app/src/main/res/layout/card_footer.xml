<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageButton
        android:id="@+id/ib_whatsapp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@drawable/whatsapp_icon"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"/>

    <ImageButton
        android:id="@+id/ib_messenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ib_whatsapp"
        android:background="@drawable/messenger_icon"
        android:layout_marginLeft="20dp"
       />

    <ImageButton
        android:id="@+id/ib_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ib_messenger"
        android:background="@drawable/like_icon"
        android:layout_marginLeft="20dp"
        />

    <ImageButton
        android:id="@+id/ib_bookmark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bookmark_icon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="268 Likes"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/ib_bookmark"
        android:layout_centerVertical="true"
        />

</RelativeLayout>