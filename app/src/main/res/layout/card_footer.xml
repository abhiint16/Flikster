<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:id="@+id/card_footer_container">

    <ImageButton
        android:id="@+id/ib_whatsapp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/whatsapp_icon" />

    <ImageButton
        android:id="@+id/ib_messenger"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="18dp"
        android:layout_centerVertical="true"
        android:background="@drawable/messenger_icon"
        android:layout_alignTop="@+id/ib_like"
        android:layout_toRightOf="@+id/ib_whatsapp"
        android:layout_toEndOf="@+id/ib_whatsapp"
        android:layout_marginStart="18dp" />

    <ImageButton
        android:id="@+id/ib_like"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/ib_messenger"
        android:background="@drawable/like_icon" />

    <ImageButton
        android:id="@+id/ib_bookmark"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bookmark_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ib_like"
        android:layout_marginLeft="10dp"
        android:text="268 Likes" />

</RelativeLayout>