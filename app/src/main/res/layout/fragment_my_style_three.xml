<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/style_background"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/five"
        android:layout_marginLeft="@dimen/five"
        android:layout_marginBottom="@dimen/five"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/captureimg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginBottom="@dimen/five"
            android:scaleType="center"
            android:background="@color/white"
            android:src="@drawable/plus_medium" />

        <ImageView
            android:id="@+id/card_gallary4_img2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="center"
            android:background="@color/white"
            android:src="@drawable/plus_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="@dimen/five"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_gallary4_img3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/five"
            android:scaleType="center"
            android:background="@color/white"
            android:src="@drawable/plus_small" />

        <ImageView
            android:id="@+id/card_gallary4_img4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:scaleType="center"
            android:background="@color/white"
            android:src="@drawable/plus_small" />
    </LinearLayout>
</LinearLayout>
