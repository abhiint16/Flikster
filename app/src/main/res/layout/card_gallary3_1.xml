<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:background="@color/white">

    <include layout="@layout/card_header"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card_gallary3_img1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1.5"
            android:scaleType="centerCrop"
            android:src="@drawable/white_radius_box" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/five"
            android:layout_marginRight="@dimen/five"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_gallary3_img2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#484848"
                android:scaleType="centerCrop"
                android:layout_marginBottom="@dimen/five"
                android:src="@drawable/white_radius_box" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#2b2b2b"
                android:id="@+id/card_gallary3_img3"
                android:layout_marginBottom="@dimen/five"
                android:scaleType="centerCrop"
                android:src="@drawable/white_radius_box" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/card_footer"></include>

    <include layout="@layout/card_description"></include>

    <include layout="@layout/card_comment_text"></include>
</LinearLayout>