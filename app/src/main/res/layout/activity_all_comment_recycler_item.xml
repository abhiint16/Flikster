<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorImageBackgroundGrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_all_comment_user_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/userprofile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/activity_all_comment_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UserName"
                android:fontFamily="@font/Mark Simonson - Proxima Nova Alt Condensed Semibold-webfont"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/activity_all_comment_main_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/Mark Simonson - Proxima Nova Alt Regular-webfont"
                android:text="comment"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="@dimen/five"
        android:layout_marginLeft="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_all_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:text="1 hour ago"
            android:fontFamily="@font/Mark Simonson - Proxima Nova Alt Regular-webfont"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="|"
            android:visibility="gone"
            android:fontFamily="@font/Mark Simonson - Proxima Nova Alt Regular-webfont"/>

        <TextView
            android:id="@+id/activity_all_comment_Like_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Like"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/Mark Simonson - Proxima Nova Alt Regular-webfont"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/Mark Simonson - Proxima Nova Alt Regular-webfont"
            android:text="|"
            android:visibility="gone" />

        <TextView
            android:id="@+id/activity_all_comment_reply_this_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Reply"
            android:fontFamily="@font/Mark Simonson - Proxima Nova Alt Regular-webfont"
            android:textColor="@color/colorAccent"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>