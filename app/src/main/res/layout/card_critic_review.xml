<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_solid_border"
    android:orientation="vertical"
    android:padding="5dp"
    android:baselineAligned="false">

    <include layout="@layout/card_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/rating_comming_soon_frag_recycle_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/mahunubavuduimg" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/movie_name_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:text="Mahanubavudu"
                android:textColor="#000"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/movie_releasedate_time_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="27 Sep 2017 | 2hrs 20min | U/A"
                android:textColor="#818181"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/movie_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="Telugu | Romance,Drama"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/moviecast_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="Cast : Sharwanand as Anand,Mehreen Prizada,Venela"
                android:textColor="#818181"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/director_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:text="Director : Maruthi Dasari"
                android:textColor="#818181"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/card_movie_review_bottom_header" />

    <include layout="@layout/card_footer" />

    <include layout="@layout/card_description" />

    <include layout="@layout/card_comment_text" />

</LinearLayout>