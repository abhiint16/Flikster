<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/ten"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:padding="@dimen/five"
            android:text="@string/shirt_name"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/closeimgv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ten"
            android:background="@drawable/closegrey" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card_gallary3_img1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:backgroundTint="@color/white"
            android:elevation="@dimen/ten"
            android:padding="@dimen/ten"
            android:scaleType="centerCrop"
            android:src="@drawable/shirtblue" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_gallary3_img2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical|center"
                android:layout_weight="1"
                android:background="@drawable/gray_rectange_border"
                android:backgroundTint="@color/white"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/product_info" />

            <ImageView
                android:id="@+id/card_gallary3_img3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/gray_rectange_border"
                android:backgroundTint="@color/white"
                android:padding="@dimen/ten"
                android:scaleType="centerCrop"
                android:src="@drawable/shirtblue" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
