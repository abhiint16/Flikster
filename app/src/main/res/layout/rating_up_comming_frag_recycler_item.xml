<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:background="@drawable/white_solid_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rating_comming_soon_frag_recycle_item_image"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/no_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rating_comming_soon_frag_recycler_item_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="Simran"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/rating_comming_soon_frag_recycler_item_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="2h 40min"
                android:textColor="#818181"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/rating_comming_soon_frag_recycler_item_tags"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Action, Drama"
                android:textColor="#818181"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/rating_comming_soon_frag_recycler_item_willWatch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/corner_rounded_green"
            android:gravity="center"
            android:padding="15dp"
            android:text="Will Watch (4000)"
            android:textColor="#4dce3f"
            android:textSize="10sp"
            android:layout_marginRight="5dp"/>


        <TextView
            android:id="@+id/rating_comming_soon_frag_recycler_item_wontWatch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/corner_rounded_red"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:padding="15dp"
            android:text="Won't Watch (40)"
            android:textColor="#ed1f86"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>