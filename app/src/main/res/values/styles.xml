<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        //<item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="headers">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/colorAuthenticationHeader</item>
    </style>

    <style name="login_btn">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="login_horizontal_line">
        <item name="android:height">2dp</item>
        <item name="android:background">@color/colorImageBackgroundGrey</item>
    </style>

    <style name="login_vertical_line">
        <item name="android:width">2dp</item>
        <item name="android:background">@color/colorImageBackgroundGrey</item>
    </style>

</resources>
